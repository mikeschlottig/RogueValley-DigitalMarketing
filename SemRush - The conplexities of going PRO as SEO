    <script>
        // Navigation functionality
        function showSection(sectionId) {
            // Hide all sections
            document.querySelectorAll('.content-section').forEach(section => {
                section.classList.remove('active');
            });
            
            // Remove active class from all tabs
            document.querySelectorAll('.nav-tab').forEach(tab => {
                tab.classList.remove('active');
            });
            
            // Show selected section
            document.getElementById(sectionId).classList.add('active');
            
            // Add active class to corresponding tab
            document.querySelector(`[data-section="${sectionId}"]`).classList.add('active');
        }

        // Tab navigation
        document.querySelectorAll('.nav-tab').forEach(tab => {
            tab.addEventListener('click', function() {
                const sectionId = this.dataset.section;
                showSection(sectionId);
            });
        });

        // Step completion
        function completeStep(stepElement) {
            stepElement.classList.add('completed');
            
            // Update progress
            const steps = stepElement.parentElement.querySelectorAll('.step');
            const completedSteps = stepElement.parentElement.querySelectorAll('.step.completed');
            const progressPercent = (completedSteps.length / steps.length) * 100;
            
            // Update progress bar if it exists
            const progressBar = document.querySelector('.progress-fill');
            if (progressBar) {
                progressBar.style.width = Math.max(progressPercent, 10) + '%';
            }
        }

        // Checkbox functionality
        function toggleCheckbox(item) {
            const checkbox = item.querySelector('.checkbox');
            checkbox.classList.toggle('checked');
        }

        // Workflow step toggle
        function toggleWorkflowStep(step) {
            step.classList.toggle('completed');
        }

        // Simulator functions
        function highlightNavItem(item, section) {
            // Remove active class from all items
            document.querySelectorAll('.simulator-nav-item').forEach(navItem => {
                navItem.classList.remove('active');
            });
            
            // Add active class to clicked item
            item.classList.add('active');
            
            // Update content based on section
            const contentArea = document.getElementById('nav-content');
            const sectionContent = {
                'dashboard': {
                    title: 'Dashboard',
                    description: 'Your SEMrush home base with overview metrics and quick access to all tools'
                },
                'keyword-analytics': {
                    title: 'Keyword Analytics',
                    description: 'Comprehensive keyword research and analysis tools'
                },
                'domain-analytics': {
                    title: 'Domain Analytics',
                    description: 'Deep dive into any domain\'s SEO performance and strategy'
                },
                'competitive-research': {
                    title: 'Competitive Research',
                    description: 'Compare your site against competitors and find opportunities'
                },
                'link-building': {
                    title: 'Link Building',
                    description: 'Discover and manage link building opportunities'
                },
                'projects': {
                    title: 'Projects',
                    description: 'Organize and track your SEO campaigns and clients'
                }
            };
            
            const content = sectionContent[section];
            contentArea.innerHTML = `
                <div class="metric-box">
                    <div class="metric-value">${content.title}</div>
                    <div class="metric-label">${content.description}</div>
                </div>
            `;
        }

        // Keyword research simulator
        function simulateKeywordSearch() {
            const keyword = document.getElementById('keyword-input').value;
            if (!keyword) {
                alert('Please enter a keyword to analyze');
                return;
            }
            
            // Show results
            document.getElementById('keyword-results').style.display = 'block';
            
            // Simulate loading with random but realistic data
            setTimeout(() => {
                const volume = Math.floor(Math.random() * 50000) + 1000;
                const difficulty = Math.floor(Math.random() * 100) + 1;
                const cpc = (Math.random() * 10 + 0.5).toFixed(2);
                const competition = (Math.random() * 1).toFixed(2);
                
                document.getElementById('search-volume').textContent = volume.toLocaleString();
                document.getElementById('keyword-difficulty').textContent = difficulty + '%';
                document.getElementById('cpc').textContent = '$' + cpc;
                document.getElementById('competition').textContent = competition;
            }, 500);
        }

        // Competitor analysis simulator
        function analyzeCompetitor() {
            const competitor = document.getElementById('competitor-input').value;
            if (!competitor) {
                alert('Please enter a competitor domain');
                return;
            }
            
            document.getElementById('competitor-results').style.display = 'block';
        }

        // Site audit simulator
        function simulateSiteAudit() {
            const domain = document.getElementById('audit-input').value;
            if (!domain) {
                alert('Please enter a domain to audit');
                return;
            }
            
            document.getElementById('audit-results').style.display = 'block';
        }

        // Backlink analysis simulator
        function analyzeBacklinks() {
            const domain = document.getElementById('backlink-input').value;
            if (!domain) {
                alert('Please enter a domain to analyze');
                return;
            }
            
            document.getElementById('backlink-results').style.display = 'block';
        }

        // Content gap finder
        function findContentGaps() {
            const yourDomain = document.getElementById('your-domain').value;
            const competitor1 = document.getElementById('competitor1').value;
            const competitor2 = document.getElementById('competitor2').value;
            
            if (!yourDomain || !competitor1 || !competitor2) {
                alert('Please enter all domains to compare');
                return;
            }
            
            document.getElementById('content-gaps').style.display = 'block';
        }

        // Rank tracking functions
        function showRankingTrends() {
            document.getElementById('ranking-dashboard').style.display = 'block';
        }

        function simulateRankingAlerts() {
            alert('Ranking alerts configured! You\'ll receive notifications when keywords move up or down by 3+ positions.');
        }

        function showCompetitorRankings() {
            alert('Competitor ranking comparison activated! Monitor how your rankings compare to top competitors.');
        }

        // Interactive challenges
        function startKeywordChallenge() {
            document.getElementById('challenge-content').style.display = 'block';
            
            // Simulate progress
            let progress = 0;
            const interval = setInterval(() => {
                progress += 20;
                document.getElementById('challenge-progress').style.width = progress + '%';
                
                if (progress >= 100) {
                    clearInterval(interval);
                    alert('Challenge completed! You\'ve successfully identified 5 high-opportunity keywords.');
                }
            }, 1000);
        }

        function showKeywordTips() {
            alert('Pro Tips:\n\n1. Focus on long-tail keywords with lower competition\n2. Use keyword magic tool for expanded suggestions\n3. Check search intent to match content type\n4. Monitor seasonal trends for timing\n5. Group keywords by topic for content clusters');
        }

        function analyzeKeywordIntent() {
            alert('Keyword Intent Analysis:\n\nInformational: "how to", "what is", "guide"\nCommercial: "best", "top", "review"\nTransactional: "buy", "discount", "deal"\nNavigational: brand names, specific products');
        }

        function startCaseStudyQuiz() {
            document.getElementById('quiz-content').style.display = 'block';
            
            // Simulate quiz progress
            let progress = 0;
            const interval = setInterval(() => {
                progress += 25;
                document.getElementById('quiz-progress').style.width = progress + '%';
                
                if (progress >= 100) {
                    clearInterval(interval);
                    alert('Quiz completed! You scored 85% - Excellent understanding of SEMrush strategies.');
                }
            }, 800);
        }

        function showSuccessFactors() {
            alert('Key Success Factors:\n\n‚úì Systematic competitor analysis\n‚úì Content gap identification\n‚úì Technical SEO improvements\n‚úì Strategic keyword targeting\n‚úì Quality backlink acquisition\n‚úì Continuous monitoring & optimization');
        }

        function createYourStrategy() {
            alert('Strategy Builder activated! Based on the case studies, create your custom SEMrush implementation plan:\n\n1. Start with competitor analysis\n2. Identify content gaps\n3. Prioritize technical fixes\n4. Build content calendar\n5. Execute link building\n6. Monitor and optimize');
        }

        // Initialize with random welcome message
        const welcomeMessages = [
            "Welcome to SEMrush Mastery! üöÄ",
            "Ready to dominate your SEO game? üí™",
            "Let's unlock SEMrush's full potential! üîì",
            "Your SEO success journey starts here! üéØ"
        ];
        
        document.addEventListener('DOMContentLoaded', function() {
            const randomMessage = welcomeMessages[Math.floor(Math.random() * welcomeMessages.length)];
            console.log(randomMessage);
        });
    </script>
